apiVersion: route.openshift.io/v1
kind: Route
metadata:
  labels:
    app: dependency-track-apiserver
  name: dependency-track-apiserver
  namespace: "{{ namespace }}"
spec:
  port:
    targetPort: "8080"
  tls:
    termination: edge
  to:
    kind: Service
    name: dependency-track-apiserver
    weight: 100
  wildcardPolicy: None