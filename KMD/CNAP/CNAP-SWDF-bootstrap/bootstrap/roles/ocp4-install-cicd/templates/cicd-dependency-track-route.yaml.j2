apiVersion: route.openshift.io/v1
kind: Route
metadata:
  labels:
    app: dependency-track-frontend
  name: dependency-track-frontend
  namespace: "{{ namespace }}"
spec:
  port:
    targetPort: "8080"
  tls:
    termination: edge
  to:
    kind: Service
    name: dependency-track-frontend
    weight: 100
  wildcardPolicy: None

