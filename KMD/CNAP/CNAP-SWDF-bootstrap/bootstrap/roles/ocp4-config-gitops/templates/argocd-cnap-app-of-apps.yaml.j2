apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: cnap-app-of-apps
  namespace: openshift-gitops
spec:
  destination:
    namespace: cicd
    server: https://kubernetes.default.svc
  project: argocd-cnap-app-of-apps-project
  source:
    path: configuration
    repoURL: https://github.com/KMD-A-S-CNAP/cnap-apps
    targetRevision: HEAD
    directory:
      recurse: true
  syncPolicy:
    automated:
      prune: false
      selfHeal: false
